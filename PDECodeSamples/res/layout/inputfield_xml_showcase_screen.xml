<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:pdecodelibrary="http://schemas.android.com/apk/res/de.telekom.pde.codelibrary.samples"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:id="@+id/inputfield_showcase_relativelayout"
              android:gravity="center">
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/inputfield_showcase_scrollview"
            >
        <LinearLayout android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/inputfield_showcase_container"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingTop="@dimen/Telekom.BU"
                android:paddingBottom="@dimen/Telekom.BU"
        >
            <de.telekom.pde.codelibrary.ui.components.inputfields.PDEInputField
                    android:id="@+id/default_pdeInputField"
                    android:layout_width="200dp"
                    android:layout_height="@dimen/Telekom.BU3"
                    android:layout_marginBottom="@dimen/Telekom.BU5"
                    pdecodelibrary:hint="Hint"
                    />
            <de.telekom.pde.codelibrary.ui.components.inputfields.PDEInputField
                    android:id="@+id/search_pdeInputField"
                    android:layout_width="200dp"
                    android:layout_height="@dimen/Telekom.BU3"
                    android:layout_marginBottom="@dimen/Telekom.BU5"
                    pdecodelibrary:hint="Search"
                    pdecodelibrary:leftIcon="#q"
                    pdecodelibrary:imeOptions="actionSearch"
                    />
            <de.telekom.pde.codelibrary.ui.components.inputfields.PDEInputField
                    android:id="@+id/password_pdeInputField"
                    android:layout_width="200dp"
                    android:layout_height="@dimen/Telekom.BU3"
                    android:layout_marginBottom="@dimen/Telekom.BU5"
                    pdecodelibrary:hint="Password"
                    pdecodelibrary:password="true"
                    />
            <de.telekom.pde.codelibrary.ui.components.inputfields.PDEInputField
                    android:id="@+id/mail_pdeInputField"
                    android:layout_width="200dp"
                    android:layout_height="@dimen/Telekom.BU3"
                    pdecodelibrary:hint="Mail"
                    pdecodelibrary:inputType="textEmailAddress"
                    />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>

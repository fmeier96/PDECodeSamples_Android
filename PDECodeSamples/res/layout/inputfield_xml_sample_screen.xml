<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:pdecodelibrary="http://schemas.android.com/apk/res/de.telekom.pde.codelibrary.samples"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:id="@+id/inputfieldsample_relativelayout"
              android:gravity="center"
        >
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/inputfieldsample_container"
            android:orientation="vertical"
    >
        <de.telekom.pde.codelibrary.ui.components.inputfields.PDEInputField
                android:id="@+id/pdeInputField"
                android:layout_width="200dp"
                android:layout_height="@dimen/Telekom.BU3"
                android:layout_marginBottom="@dimen/Telekom.BU5"
                pdecodelibrary:hint="PDEInputField hint"
                />
        <EditText android:id="@+id/nativeEditText"
                  android:layout_width="200dp"
                  android:layout_height="@dimen/Telekom.BU3"
                  android:singleLine="true"
                  android:hint="Native hint"
                  />
    </LinearLayout>
</RelativeLayout>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:pdecodelibrary="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/headers_rootview"
            android:background="@color/DTLightUIBackground">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/buttonxmlshowcase2_container"
            >

        <de.telekom.pde.codelibrary.ui.components.elementwrappers.PDETextView
                android:id = "@+id/header_blue"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/Telekom.BU3"
                pdecodelibrary:pde_paddingLeft="@dimen/Telekom.BU"
                android:layout_marginTop="@dimen/Telekom.BU2"
                android:layout_marginBottom="@dimen/Telekom.BU_1_2"
                pdecodelibrary:pde_textSize="1BU"
                pdecodelibrary:pde_backgroundColor="@color/DTTransparentBlack"
                pdecodelibrary:pde_alignmentMode="capHeight"
                pdecodelibrary:pde_verticalAlignment="top"
                pdecodelibrary:pde_textColor="@color/DTLightBlue"
                pdecodelibrary:pde_text="Stage"
                pdecodelibrary:pde_typeface="@string/Tele_GroteskFet"
                />

        <de.telekom.pde.codelibrary.ui.components.elementwrappers.PDETextView
                android:id = "@+id/header_blue2"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/Telekom.BU3"
                pdecodelibrary:pde_paddingLeft="@dimen/Telekom.BU_1_2"
                android:layout_marginTop="@dimen/Telekom.BU2"
                android:layout_marginBottom="@dimen/Telekom.BU_1_2"
                pdecodelibrary:pde_textSize="1BU"
                pdecodelibrary:pde_backgroundColor="@color/DTTransparentBlack"
                pdecodelibrary:pde_alignmentMode="capHeight"
                pdecodelibrary:pde_verticalAlignment="top"
                pdecodelibrary:pde_textColor="@color/DTLightBlue"
                pdecodelibrary:pde_text="Flat"
                android:layout_toRightOf="@id/header_blue"
                />

        <!-- Size of the following layout will be increased by sourcecode, because we can't set values bigger than 10 BU in XML -->
        <LinearLayout android:id = "@+id/stage"
                      android:orientation="vertical"
                      android:layout_width="@dimen/Telekom.BU"
                      android:layout_height="@dimen/Telekom.BU"
                      android:layout_below="@id/header_blue"
                      android:layout_marginLeft="@dimen/Telekom.BU"
                >

        </LinearLayout>





    </RelativeLayout>
</ScrollView>



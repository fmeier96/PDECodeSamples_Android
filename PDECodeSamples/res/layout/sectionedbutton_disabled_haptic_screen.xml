<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:pdecodelibrary="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/sectionedbutton_disabled_rootview"
            android:background="@color/DTLightUIBackground">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sectionedbuttondisabled_container"
            >

        <de.telekom.pde.codelibrary.ui.components.sectionedbuttons.PDESectionedButton
                android:id="@+id/sectionedbutton"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/StandardButtonHeight"
                android:layout_marginBottom="@dimen/Telekom.BU1_1_2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/Telekom.BU2"
                pdecodelibrary:pde_backgroundType="haptic"
                pdecodelibrary:pde_sections="@array/SectionedButton_sample_default"
                />

        <de.telekom.pde.codelibrary.ui.components.buttons.PDEButton
                android:id="@+id/button_checkbox_disable_all"
                android:layout_width="216dp"
                android:layout_height="@dimen/StandardButtonHeight"
                android:layout_marginBottom="@dimen/Telekom.BU1_1_2"
                android:layout_below="@id/sectionedbutton"
                android:layout_centerHorizontal="true"
                pdecodelibrary:pde_text="Enable button"
                pdecodelibrary:pde_backgroundType="none"
                pdecodelibrary:pde_overlay="checkboxHaptic"
                pdecodelibrary:pde_textAlignment="left"
                pdecodelibrary:pde_selected="true"
                />

        <de.telekom.pde.codelibrary.ui.components.buttons.PDEButton
            android:id="@+id/button_checkbox_disable_first"
            android:layout_width="216dp"
            android:layout_height="@dimen/StandardButtonHeight"
            android:layout_marginBottom="@dimen/Telekom.BU1_1_2"
            android:layout_below="@id/button_checkbox_disable_all"
            android:layout_centerHorizontal="true"
            pdecodelibrary:pde_text="Enable first section"
            pdecodelibrary:pde_backgroundType="none"
            pdecodelibrary:pde_overlay="checkboxFlat"
            pdecodelibrary:pde_textAlignment="left"
            pdecodelibrary:pde_selected="true"
            />
    </RelativeLayout>
</ScrollView>

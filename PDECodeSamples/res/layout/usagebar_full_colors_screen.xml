<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:pdecodelibrary="http://schemas.android.com/apk/res-auto"
              android:id="@+id/usagebar_root"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <ScrollView android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
        <LinearLayout
            android:id="@+id/usagebar_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/Telekom.BU">
            <de.telekom.pde.codelibrary.ui.components.datavisualisation.usagebar.PDEUsageBar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/Telekom.BU"
                    pdecodelibrary:pde_color="@color/DTDVYellow"
                    pdecodelibrary:pde_totalFillValue="150"
                    pdecodelibrary:pde_fillDuration="2000"
                    pdecodelibrary:pde_startAnimationAtOnceEnabled="true"/>
            <de.telekom.pde.codelibrary.ui.components.datavisualisation.usagebar.PDEUsageBar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/Telekom.BU"
                    pdecodelibrary:pde_color="@color/DTDVOrange"
                    pdecodelibrary:pde_totalFillValue="150"
                    pdecodelibrary:pde_fillDuration="2000"
                    pdecodelibrary:pde_startAnimationAtOnceEnabled="true"/>
            <de.telekom.pde.codelibrary.ui.components.datavisualisation.usagebar.PDEUsageBar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/Telekom.BU"
                    pdecodelibrary:pde_color="@color/DTDVPurple"
                    pdecodelibrary:pde_totalFillValue="150"
                    pdecodelibrary:pde_fillDuration="2000"
                    pdecodelibrary:pde_startAnimationAtOnceEnabled="true"/>
            <de.telekom.pde.codelibrary.ui.components.datavisualisation.usagebar.PDEUsageBar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/Telekom.BU"
                    pdecodelibrary:pde_color="@color/DTDVLightBlue"
                    pdecodelibrary:pde_totalFillValue="150"
                    pdecodelibrary:pde_fillDuration="2000"
                    pdecodelibrary:pde_startAnimationAtOnceEnabled="true"/>
            <de.telekom.pde.codelibrary.ui.components.datavisualisation.usagebar.PDEUsageBar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/Telekom.BU"
                    pdecodelibrary:pde_color="@color/DTDVDarkBlue"
                    pdecodelibrary:pde_totalFillValue="150"
                    pdecodelibrary:pde_fillDuration="2000"
                    pdecodelibrary:pde_startAnimationAtOnceEnabled="true"/>
            <de.telekom.pde.codelibrary.ui.components.datavisualisation.usagebar.PDEUsageBar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/Telekom.BU"
                    pdecodelibrary:pde_color="@color/DTDVPetrol"
                    pdecodelibrary:pde_totalFillValue="150"
                    pdecodelibrary:pde_fillDuration="2000"
                    pdecodelibrary:pde_startAnimationAtOnceEnabled="true"/>
            <de.telekom.pde.codelibrary.ui.components.datavisualisation.usagebar.PDEUsageBar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/Telekom.BU"
                    pdecodelibrary:pde_color="@color/DTDVGreen"
                    pdecodelibrary:pde_totalFillValue="150"
                    pdecodelibrary:pde_fillDuration="2000"
                    pdecodelibrary:pde_startAnimationAtOnceEnabled="true"/>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
            android:id="@+id/button_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/Telekom.BU">
            <de.telekom.pde.codelibrary.ui.components.buttons.PDEButton
                android:id="@+id/empty_button"
                android:layout_width="match_parent"
                android:layout_height="@dimen/StandardButtonHeight"
                pdecodelibrary:pde_text="Empty"
                android:layout_marginLeft="@dimen/Telekom.BU"
                android:layout_marginRight="@dimen/Telekom.BU_1_2"
                android:layout_weight="1"/>

            <de.telekom.pde.codelibrary.ui.components.buttons.PDEButton
                android:id="@+id/fill_button"
                android:layout_width="match_parent"
                android:layout_height="@dimen/StandardButtonHeight"
                pdecodelibrary:pde_text="Fill"
                android:layout_marginLeft="@dimen/Telekom.BU_1_2"
                android:layout_marginRight="@dimen/Telekom.BU"
                android:layout_weight="1"/>

    </LinearLayout>
</LinearLayout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:pdecodelibrary="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              >

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentTop="true"
            android:id="@+id/typeChooser"
            >
        <de.telekom.pde.codelibrary.ui.components.buttons.PDEButton
                android:id="@id/button_radio1"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/StandardButtonHeight"
                android:layout_marginBottom="@dimen/Telekom.BU"
                android:tag="0"
                android:layout_weight="1"
                pdecodelibrary:text="ToolTip"
                pdecodelibrary:backgroundType="none"
                pdecodelibrary:overlay="radioFlat"
                pdecodelibrary:textAlignment="left"
                pdecodelibrary:selected="true"
                />

        <de.telekom.pde.codelibrary.ui.components.buttons.PDEButton
                android:id="@id/button_radio2"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/StandardButtonHeight"
                android:layout_marginBottom="@dimen/Telekom.BU1_1_2"
                android:layout_weight="1"
                android:tag="1"
                pdecodelibrary:text="InfoFlag"
                pdecodelibrary:backgroundType="none"
                pdecodelibrary:overlay="radioFlat"
                pdecodelibrary:textAlignment="left"
                />

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/typeChooser"
            android:id="@+id/indicator1"
            >
        <de.telekom.pde.codelibrary.ui.components.buttons.PDEButton
                android:id="@+id/telekomTriangleTop"
                android:layout_width="match_parent"
                android:layout_height="@dimen/StandardButtonHeight"
                android:layout_weight="1"
                android:layout_margin="@dimen/Telekom.BU"
                pdecodelibrary:text="Indicator @ Top"/>

        <de.telekom.pde.codelibrary.ui.components.buttons.PDEButton
                android:id="@+id/telekomTriangleLeft"
                android:layout_width="match_parent"
                android:layout_height="@dimen/StandardButtonHeight"
                android:layout_weight="1"
                android:layout_margin="@dimen/Telekom.BU"
                pdecodelibrary:text="Indicator @ Left"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/indicator1"
            >
        <de.telekom.pde.codelibrary.ui.components.buttons.PDEButton
                android:id="@+id/telekomTriangleBottom"
                android:layout_width="match_parent"
                android:layout_height="@dimen/StandardButtonHeight"
                android:layout_weight="1"
                android:layout_margin="@dimen/Telekom.BU"
                pdecodelibrary:text="Indicator @ Bottom"/>

        <de.telekom.pde.codelibrary.ui.components.buttons.PDEButton
                android:id="@+id/telekomTriangleRight"
                android:layout_width="match_parent"
                android:layout_height="@dimen/StandardButtonHeight"
                android:layout_weight="1"
                android:layout_margin="@dimen/Telekom.BU"
                pdecodelibrary:text="Indicator @ Right"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/telekomButtonContainer"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_alignParentBottom="true">

        <de.telekom.pde.codelibrary.ui.components.buttons.PDEButton
                android:id="@+id/telekomButtonShow"
                android:layout_width="match_parent"
                android:layout_height="@dimen/StandardButtonHeight"
                android:layout_weight="1"
                pdecodelibrary:text="Show"/>

        <de.telekom.pde.codelibrary.ui.components.buttons.PDEButton
                android:id="@+id/telekomButtonShowTime"
                android:layout_width="match_parent"
                android:layout_height="@dimen/StandardButtonHeight"
                android:layout_weight="1"
                pdecodelibrary:text="Show (time)"/>

        <de.telekom.pde.codelibrary.ui.components.buttons.PDEButton
                android:id="@+id/telekomButtonHide"
                android:layout_width="match_parent"
                android:layout_height="@dimen/StandardButtonHeight"
                android:layout_weight="1"
                pdecodelibrary:text="Hide"/>

    </LinearLayout>

    <de.telekom.pde.codelibrary.ui.components.notification.PDEToolTip
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/telekomButtonContainer"
            android:layout_centerHorizontal="true"
            android:id="@+id/ToolTip"
            android:background="@color/DTFunctionalRed"
            android:padding="@dimen/Telekom.BU"
            pdecodelibrary:message="@string/common_lorem_ipsum_text"
            android:layout_marginLeft="@dimen/Telekom.BU2"
            android:layout_marginRight="@dimen/Telekom.BU2"
            />


    <de.telekom.pde.codelibrary.ui.components.notification.PDEInfoFlag
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/telekomButtonContainer"
            android:layout_centerHorizontal="true"
            android:id="@+id/InfoFlag"
            android:layout_marginLeft="@dimen/Telekom.BU2"
            android:layout_marginRight="@dimen/Telekom.BU2"
            pdecodelibrary:title="Info-Flag Title"
            pdecodelibrary:message="@string/common_lorem_ipsum_text"
            />
</RelativeLayout>
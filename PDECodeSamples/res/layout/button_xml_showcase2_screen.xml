<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:dt_codecomponents="http://schemas.android.com/apk/res/de.telekom.pde.codelibrary.samples"

              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:id="@+id/buttonxmlshowcase2_relativelayout"
              android:layout_centerInParent="true"
              android:background="@color/DTLightUIBackground"
        >
    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonxmlshowcase2_container"
            android:layout_centerInParent="true"
    >
        <de.telekom.pde.codelibrary.ui.components.buttons.PDEButton
                android:id="@id/button_selectable"
                android:layout_width="180dp"
                android:layout_height="@dimen/StandardButtonHeight"
                android:layout_marginBottom="12dp"
                android:layout_centerHorizontal="true"
                dt_codecomponents:src="@drawable/synchronize_generic_plain_center"
                dt_codecomponents:text="Selectable"
                dt_codecomponents:icon_colored="true"
                dt_codecomponents:button_color="@color/DTWhite"/>
        <de.telekom.pde.codelibrary.ui.components.buttons.PDEButton
                android:id="@id/button_multistate"
                android:layout_width="180dp"
                android:layout_height="@dimen/StandardButtonHeight"
                android:layout_marginBottom="12dp"
                android:layout_below="@id/button_selectable"
                android:layout_centerHorizontal="true"
                dt_codecomponents:icon_colored="true"
                dt_codecomponents:text="Multiple States"
                dt_codecomponents:src="@drawable/synchronize_generic_plain_center"
                />
        <de.telekom.pde.codelibrary.ui.components.buttons.PDEButton
                android:id="@id/button_checkbox1"
                android:layout_width="180dp"
                android:layout_height="@dimen/StandardButtonHeight"
                android:layout_marginBottom="12dp"
                android:layout_below="@id/button_multistate"
                android:layout_centerHorizontal="true"
                dt_codecomponents:text="Checkbox 1"
                dt_codecomponents:background="none"
                dt_codecomponents:overlay="checkbox"
                dt_codecomponents:text_alignment="left"
                />

        <de.telekom.pde.codelibrary.ui.components.buttons.PDEButton
                android:id="@id/button_checkbox2"
                android:layout_width="180dp"
                android:layout_height="@dimen/StandardButtonHeight"
                android:layout_marginBottom="12dp"
                android:layout_below="@id/button_checkbox1"
                android:layout_centerHorizontal="true"
                dt_codecomponents:text="Checkbox 2"
                dt_codecomponents:background="none"
                dt_codecomponents:overlay="checkbox"
                dt_codecomponents:text_alignment="left"
                />

        <de.telekom.pde.codelibrary.ui.components.buttons.PDEButton
                android:id="@id/button_radio1"
                android:layout_width="180dp"
                android:layout_height="@dimen/StandardButtonHeight"
                android:layout_marginBottom="12dp"
                android:layout_below="@id/button_checkbox2"
                android:layout_centerHorizontal="true"
                android:tag="0"
                dt_codecomponents:text="Radio 1"
                dt_codecomponents:background="none"
                dt_codecomponents:overlay="radio"
                dt_codecomponents:text_alignment="left"
                dt_codecomponents:selected="true"
                />

        <de.telekom.pde.codelibrary.ui.components.buttons.PDEButton
                android:id="@id/button_radio2"
                android:layout_width="180dp"
                android:layout_height="@dimen/StandardButtonHeight"
                android:layout_marginBottom="12dp"
                android:layout_below="@id/button_radio1"
                android:layout_centerHorizontal="true"
                android:tag="1"
                dt_codecomponents:text="Radio 2"
                dt_codecomponents:background="none"
                dt_codecomponents:overlay="radio"
                dt_codecomponents:text_alignment="left"
                />

        <de.telekom.pde.codelibrary.ui.components.buttons.PDEButton
                android:id="@id/button_checkbox3"
                android:layout_width="@dimen/StandardButtonHeight"
                android:layout_height="@dimen/StandardButtonHeight"
                android:layout_marginRight="12dp"
                android:layout_below="@id/button_radio2"
                android:layout_alignLeft="@id/button_radio2"
                dt_codecomponents:background="none"
                dt_codecomponents:overlay="checkbox"
                />

        <de.telekom.pde.codelibrary.ui.components.buttons.PDEButton
                android:id="@id/button_checkbox4"
                android:layout_width="@dimen/StandardButtonHeight"
                android:layout_height="@dimen/StandardButtonHeight"
                android:layout_marginRight="12dp"
                android:layout_below="@id/button_radio2"
                android:layout_toRightOf="@id/button_checkbox3"
                dt_codecomponents:background="none"
                dt_codecomponents:overlay="checkbox"
                />

        <de.telekom.pde.codelibrary.ui.components.buttons.PDEButton
                android:id="@id/button_checkbox5"
                android:layout_width="@dimen/StandardButtonHeight"
                android:layout_height="@dimen/StandardButtonHeight"
                android:layout_marginRight="12dp"
                android:layout_below="@id/button_radio2"
                android:layout_toRightOf="@id/button_checkbox4"
                dt_codecomponents:background="none"
                dt_codecomponents:overlay="checkbox"
                />

        <de.telekom.pde.codelibrary.ui.components.buttons.PDEButton
                android:id="@id/button_checkbox6"
                android:layout_width="@dimen/StandardButtonHeight"
                android:layout_height="@dimen/StandardButtonHeight"
                android:layout_below="@id/button_radio2"
                android:layout_toRightOf="@id/button_checkbox5"
                dt_codecomponents:background="none"
                dt_codecomponents:overlay="checkbox"
                />


    </RelativeLayout>
</RelativeLayout>

<!-- *** XML-Template for a small sized list item with single line text. *** -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
        >
    <!-- If you want to ensure a fixed height of the layout, you have to nest two layouts... -->
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:pdecodelibrary="http://schemas.android.com/apk/res-auto"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/Telekom.BU5"
                    android:descendantFocusability="blocksDescendants"
            >


        <de.telekom.pde.codelibrary.ui.components.buttons.PDEButton
                android:id="@+id/button_checkboxx"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/StandardListItemHeight"
                android:layout_marginLeft="@dimen/Telekom.BU"
                pdecodelibrary:text="Checkbox 1"
                pdecodelibrary:backgroundType="none"
                pdecodelibrary:overlay="checkboxHaptic"
                pdecodelibrary:textAlignment="left"
                android:layout_centerVertical="true"
                />

        <de.telekom.pde.codelibrary.ui.components.elementwrappers.PDELayerTextView
                android:id = "@+id/PDEList_ItemText"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/Telekom.BU5"
                pdecodelibrary:paddingLeft="@dimen/Telekom.BU"
                pdecodelibrary:textSize="@dimen/Telekom.BU2"
                pdecodelibrary:backgroundColor="@color/DTTransparentBlack"
                pdecodelibrary:alignmentMode="capHeight"
                pdecodelibrary:verticalAlignment="center"
                pdecodelibrary:textColor="@color/DTUIText"
                android:layout_toRightOf="@id/button_checkboxx"
                android:layout_centerVertical="true"
                />



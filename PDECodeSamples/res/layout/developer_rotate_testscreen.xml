<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:pdecodelibrary="http://schemas.android.com/apk/res/de.telekom.pde.codelibrary.samples"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New CheckBox"
            android:id="@+id/checkBox" android:layout_gravity="left|center_vertical"/>
    <view android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          class="de.telekom.pde.codelibrary.ui.components.buttons.PDEButton" android:id="@+id/rotatetestscreen_pde_checkbox"
          android:layout_gravity="center"
          pdecodelibrary:text="Checkbox 1"
          pdecodelibrary:backgroundType="none"
          pdecodelibrary:overlay="checkboxHaptic"
          pdecodelibrary:textAlignment="left"/>
</LinearLayout>
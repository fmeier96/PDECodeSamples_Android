<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:pdecodelibrary="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/headers_rootview"
            android:background="@color/DTLightUIBackground">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/buttonxmlshowcase2_container"
            >

        <de.telekom.pde.codelibrary.ui.elements.complex.PDEListHeaderLayout
            android:id="@+id/header_headline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            pdecodelibrary:pde_text="Headline"
            />


        <de.telekom.pde.codelibrary.ui.elements.complex.PDEListHeaderLayout
            android:id="@+id/header_headline_sub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            pdecodelibrary:pde_text="Headline"
            pdecodelibrary:pde_subText="(23)"
            android:layout_below="@+id/header_headline"
            />

        <de.telekom.pde.codelibrary.ui.elements.complex.PDEListHeaderLayout
            android:id="@+id/header_cluster_headline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            pdecodelibrary:pde_text="Cluster Headline"
            pdecodelibrary:pde_subText="(23)"
            pdecodelibrary:pde_type="clusterHeadline"
            android:layout_below="@+id/header_headline_sub"
            />

    </RelativeLayout>
</ScrollView>

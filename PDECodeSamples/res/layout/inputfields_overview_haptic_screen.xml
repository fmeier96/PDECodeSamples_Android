<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:pdecodelibrary="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/inputfield_root_scrollview"
            android:background="@color/DTLightUIBackground">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/inputfield_container"
            >

        <de.telekom.pde.codelibrary.ui.components.elementwrappers.PDETextView
                android:id = "@+id/header_blue"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/Telekom.BU3"
                pdecodelibrary:paddingLeft="@dimen/Telekom.BU"
                android:layout_marginTop="@dimen/Telekom.BU2"
                android:layout_marginBottom="@dimen/Telekom.BU_1_2"
                pdecodelibrary:textSize="1BU"
                pdecodelibrary:backgroundColor="@color/DTTransparentBlack"
                pdecodelibrary:alignmentMode="capHeight"
                pdecodelibrary:verticalAlignment="top"
                pdecodelibrary:textColor="@color/DTLightBlue"
                pdecodelibrary:text="Inputfield"
                pdecodelibrary:typeface="@string/Tele_GroteskFet"
                />

        <de.telekom.pde.codelibrary.ui.components.elementwrappers.PDETextView
                android:id = "@+id/header_blue2"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/Telekom.BU3"
                pdecodelibrary:paddingLeft="@dimen/Telekom.BU_1_2"
                android:layout_marginTop="@dimen/Telekom.BU2"
                android:layout_marginBottom="@dimen/Telekom.BU_1_2"
                pdecodelibrary:textSize="1BU"
                pdecodelibrary:backgroundColor="@color/DTTransparentBlack"
                pdecodelibrary:alignmentMode="capHeight"
                pdecodelibrary:verticalAlignment="top"
                pdecodelibrary:textColor="@color/DTLightBlue"
                pdecodelibrary:text="Haptic"
                android:layout_toRightOf="@id/header_blue"
                />

        <de.telekom.pde.codelibrary.ui.components.inputfields.PDEInputField
                android:id="@+id/pdeInputField"
                android:layout_width="200dp"
                android:layout_height="@dimen/Telekom.BU3"
                android:layout_marginBottom="@dimen/Telekom.BU2"
                android:layout_marginLeft="@dimen/Telekom.BU"
                android:layout_centerHorizontal="false"
                android:layout_below="@id/header_blue"
                pdecodelibrary:hint="Prefill text"
                pdecodelibrary:backgroundType="textHaptic"
                />

        <de.telekom.pde.codelibrary.ui.components.elementwrappers.PDETextView
                android:id = "@+id/header_blue3"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/Telekom.BU3"
                android:layout_marginBottom="@dimen/Telekom.BU_1_2"
                pdecodelibrary:paddingLeft="@dimen/Telekom.BU"
                pdecodelibrary:textSize="1BU"
                pdecodelibrary:backgroundColor="@color/DTTransparentBlack"
                pdecodelibrary:alignmentMode="capHeight"
                pdecodelibrary:verticalAlignment="top"
                pdecodelibrary:textColor="@color/DTLightBlue"
                pdecodelibrary:text="Search inputfield"
                pdecodelibrary:typeface="@string/Tele_GroteskFet"
                android:layout_below="@id/pdeInputField"
                />

        <de.telekom.pde.codelibrary.ui.components.elementwrappers.PDETextView
                android:id = "@+id/header_blue4"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/Telekom.BU3"
                android:layout_marginBottom="@dimen/Telekom.BU_1_2"
                pdecodelibrary:paddingLeft="@dimen/Telekom.BU_1_2"
                pdecodelibrary:textSize="1BU"
                pdecodelibrary:backgroundColor="@color/DTTransparentBlack"
                pdecodelibrary:alignmentMode="capHeight"
                pdecodelibrary:verticalAlignment="top"
                pdecodelibrary:textColor="@color/DTLightBlue"
                pdecodelibrary:text="Haptic"
                android:layout_below="@id/pdeInputField"
                android:layout_toRightOf="@id/header_blue3"
                />

        <de.telekom.pde.codelibrary.ui.components.inputfields.PDEInputField
                android:id="@+id/search_pdeInputField"
                android:layout_width="200dp"
                android:layout_height="@dimen/Telekom.BU3"
                android:layout_marginBottom="@dimen/Telekom.BU2"
                android:layout_marginLeft="@dimen/Telekom.BU"
                android:layout_below="@id/header_blue3"
                android:layout_centerHorizontal="false"
                pdecodelibrary:hint="Search"
                pdecodelibrary:leftIcon="#q"
                pdecodelibrary:imeOptions="actionSearch"
                pdecodelibrary:backgroundType="textHaptic"
                />

        <de.telekom.pde.codelibrary.ui.components.elementwrappers.PDETextView
                android:id = "@+id/header_blue5"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/Telekom.BU3"
                android:layout_marginBottom="@dimen/Telekom.BU_1_2"
                pdecodelibrary:paddingLeft="@dimen/Telekom.BU"
                pdecodelibrary:textSize="1BU"
                pdecodelibrary:backgroundColor="@color/DTTransparentBlack"
                pdecodelibrary:alignmentMode="capHeight"
                pdecodelibrary:verticalAlignment="top"
                pdecodelibrary:textColor="@color/DTLightBlue"
                pdecodelibrary:text="Password inputfield"
                pdecodelibrary:typeface="@string/Tele_GroteskFet"
                android:layout_below="@id/search_pdeInputField"
                />

        <de.telekom.pde.codelibrary.ui.components.elementwrappers.PDETextView
                android:id = "@+id/header_blue6"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/Telekom.BU3"
                android:layout_marginBottom="@dimen/Telekom.BU_1_2"
                pdecodelibrary:paddingLeft="@dimen/Telekom.BU_1_2"
                pdecodelibrary:textSize="1BU"
                pdecodelibrary:backgroundColor="@color/DTTransparentBlack"
                pdecodelibrary:alignmentMode="capHeight"
                pdecodelibrary:verticalAlignment="top"
                pdecodelibrary:textColor="@color/DTLightBlue"
                pdecodelibrary:text="Haptic"
                android:layout_below="@id/search_pdeInputField"
                android:layout_toRightOf="@id/header_blue5"
                />

        <de.telekom.pde.codelibrary.ui.components.inputfields.PDEInputField
                android:id="@+id/password_pdeInputField"
                android:layout_width="200dp"
                android:layout_height="@dimen/Telekom.BU3"
                android:layout_marginBottom="@dimen/Telekom.BU2"
                android:layout_marginLeft="@dimen/Telekom.BU"
                pdecodelibrary:hint="Password"
                pdecodelibrary:password="true"
                pdecodelibrary:backgroundType="textHaptic"
                android:layout_below="@id/header_blue5"
                />

        <de.telekom.pde.codelibrary.ui.components.elementwrappers.PDETextView
                android:id = "@+id/header_blue7"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/Telekom.BU3"
                android:layout_marginBottom="@dimen/Telekom.BU_1_2"
                pdecodelibrary:paddingLeft="@dimen/Telekom.BU"
                pdecodelibrary:textSize="1BU"
                pdecodelibrary:backgroundColor="@color/DTTransparentBlack"
                pdecodelibrary:alignmentMode="capHeight"
                pdecodelibrary:verticalAlignment="top"
                pdecodelibrary:textColor="@color/DTLightBlue"
                pdecodelibrary:text="Email inputfield"
                pdecodelibrary:typeface="@string/Tele_GroteskFet"
                android:layout_below="@id/password_pdeInputField"
                />

        <de.telekom.pde.codelibrary.ui.components.elementwrappers.PDETextView
                android:id = "@+id/header_blue8"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/Telekom.BU3"
                android:layout_marginBottom="@dimen/Telekom.BU_1_2"
                pdecodelibrary:paddingLeft="@dimen/Telekom.BU_1_2"
                pdecodelibrary:textSize="1BU"
                pdecodelibrary:backgroundColor="@color/DTTransparentBlack"
                pdecodelibrary:alignmentMode="capHeight"
                pdecodelibrary:verticalAlignment="top"
                pdecodelibrary:textColor="@color/DTLightBlue"
                pdecodelibrary:text="Haptic"
                android:layout_below="@id/password_pdeInputField"
                android:layout_toRightOf="@id/header_blue7"
                />

        <de.telekom.pde.codelibrary.ui.components.inputfields.PDEInputField
                android:id="@+id/mail_pdeInputField"
                android:layout_width="200dp"
                android:layout_height="@dimen/Telekom.BU3"
                pdecodelibrary:hint="Email address"
                pdecodelibrary:inputType="textEmailAddress"
                android:layout_marginBottom="@dimen/Telekom.BU"
                android:layout_marginLeft="@dimen/Telekom.BU"
                pdecodelibrary:backgroundType="textHaptic"
                android:layout_below="@id/header_blue7"
                />
    </RelativeLayout>
</ScrollView>

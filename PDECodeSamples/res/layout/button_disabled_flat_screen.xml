<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:pdecodelibrary="http://schemas.android.com/apk/res/de.telekom.pde.codelibrary.samples"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/button_disabled_rootview"
            android:background="@color/DTLightUIBackground">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/buttondisabled_container"
            android:layout_centerInParent="true"
            >

        <de.telekom.pde.codelibrary.ui.components.buttons.PDEButton
                android:id="@+id/button_disabled_test"
                android:layout_width="216dp"
                android:layout_height="@dimen/StandardButtonHeight"
                android:layout_marginBottom="@dimen/Telekom.BU1_1_2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/Telekom.BU2"
                pdecodelibrary:text="Disabled Test"
                pdecodelibrary:backgroundType="flat"
                />

        <de.telekom.pde.codelibrary.ui.components.buttons.PDEButton
                android:id="@+id/button_checkbox"
                android:layout_width="216dp"
                android:layout_height="@dimen/StandardButtonHeight"
                android:layout_marginBottom="@dimen/Telekom.BU1_1_2"
                android:layout_below="@id/button_disabled_test"
                android:layout_centerHorizontal="true"
                pdecodelibrary:text="Enable Button"
                pdecodelibrary:backgroundType="none"
                pdecodelibrary:overlay="checkboxFlat"
                pdecodelibrary:textAlignment="left"
                pdecodelibrary:selected="true"
                />

    </RelativeLayout>
</ScrollView>
